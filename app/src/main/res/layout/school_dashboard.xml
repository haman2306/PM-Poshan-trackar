<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchoolDashboard">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUploadAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Attendance"
        android:layout_marginTop="90dp"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/light_blue"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUploadMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Menu"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAllCaps="false"
        android:background="@color/orange1"
        android:layout_below="@+id/btnUploadAttendance" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUploadBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload BMI"
        android:textAllCaps="false"
        android:layout_marginTop="25dp"
        android:background="@color/orange2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/btnUploadMenu"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUploadBMI"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="50dp"
        android:background="@color/teal_200"
        android:text="Add Student"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditPhoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUploadBMI"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="75dp"
        android:background="@color/teal_700"
        android:text="Edit your Phone No."
        android:textAllCaps="false" />

        <TextView
            android:id="@+id/txtViewRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnAddStudent"
            android:text="View Your Rank "
            android:textSize="25sp"
            app:drawableEndCompat="@drawable/arrow_forward" />

</RelativeLayout>